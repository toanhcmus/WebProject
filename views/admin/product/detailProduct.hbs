                        </a>
                       
                            <div class="product-namee product-name text-left">{{this.name}}</div>
                       
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="product-price">{{this.price}}</span>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
