        .topbar-text {
            color: black;
        }

        .topbar-bottom {
            background: #193d87;
            color: #ffffff;
            font-size: 13px;
        }

        .topbar-bottom .box-content {
            padding: 6px 0;
        }

        .topbar-bottom .hotline a {
            font-weight: 700;
            color: #ffffff;
        }

        .topbar-bottom .contact a {
            font-weight: 700;
            color: #ffffff;
        }

        .navbar {
            background: #ffffff;
            color: #000000;
            font-size: 13px;
        }

        .navbar .box-content {
            padding: 6px 0;
        }

        .home {
            width: 200px;
        }

        .nav-box {
            width: 800px;
        }

        .util {
            width: 200px;
        }

        .intro-banner {
            background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url("https://theme.hstatic.net/200000680615/1001104472/14/about01_banner_bkg.jpg");
