        }

        .banner-headtext {
            font-size: 30px;
            font-weight: 600;
            color: white;
        }

        .banner-text {
            font-weight: 600;
            color: white;
        }

        .content-text-title-f {
            letter-spacing: 5px;
        }

        .text-column {
            width: 450px;
        }

        .content-image {
            width: 45%;
            height: 45%;
        }

        .icon-item {
            width: 210px;
        }

        .subscription-container {
            background-color: #1c4290;
            height: 80px;
        }

        .subscription-input {
            width: 300px;
        }

        .subscription-input-container {
            height: 40px;
        }

        .subscription-title {
            padding: 0;
            margin: 0;
            position: relative;
            font-size: 15px;
            font-weight: 700;
            color: white;
            line-height: 1.2;
        }

        .subscription-input {
            margin-top: 20px;
        }

        .subscription-button {
            font-weight: 700;
            white-space: nowrap;
            height: 35px;
            border-radius: 20px;
            position: relative;
            display: inline-block;
            z-index: 1;
            overflow: hidden;
            line-height: normal;
            color: #fff;
            border: 0;
            text-align: center;
            letter-spacing: 1px;
            text-transform: uppercase;
            outline: none !important;
            transition: all 0.45s cubic-bezier(0.785, 0.135, 0.15, 0.86);
            background: #161718;
            font-size: small;
        }

        .social-icon {
            width: 32px;
            height: 32px;
            line-height: 30px;
            font-size: 14px;
            background-color: transparent;
            border: 1px solid white;
            color: white;
            display: block;
            text-align: center;
            border-radius: 50%;
            transition: 0.4s;
            text-decoration: none;
            outline: none;
        }

        .social-ul {
            list-style-type: none;
            display: flex;
            flex-direction: row;
            margin-block-start: 1em;
            margin-block-end: 1em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            padding-inline-start: 40px;
            padding-left: 0 !important;
        }

        .address-ul {
            list-style-type: none;
            display: flex;
            flex-direction: column;
            margin-block-start: 1em;
            margin-block-end: 1em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            padding-inline-start: 40px;
            padding-left: 0 !important;
        }

        .social-li {
            margin-right: 5px;
        }

        .footer-container {
            background: #193d87;
            position: relative;
            font-size: 16px;
            color: white;
            margin: 0;
            font-weight: 500;
        }

        .footer-link {
            color: #ffffff;
        }

        .footer-end {
            background: #1c4290;
        }
